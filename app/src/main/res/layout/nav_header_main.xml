<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="com.kwunai.github.entity.UserRsp" />

    </data>

    <LinearLayout
        android:id="@+id/navigationHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="?attr/sideBarBackground"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <com.kwunai.github.widgets.AvatarImageView
            android:id="@+id/avatarView"
            android:layout_width="@dimen/drawer_header_size"
            android:layout_height="@dimen/drawer_header_size"
            app:srcCompat="@mipmap/ic_github" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="@={ user.name }"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@={ user.email }"
            android:textColor="?android:textColorPrimary" />

    </LinearLayout>

</layout>
